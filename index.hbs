{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    <div class="vertical">
        <div class="main-header-content inner">
            <h1 class="page-title">{{@blog.title}}</h1>
            <h2 class="page-description">{{@blog.description}}</h2>
        </div>
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
</header>

{{! The main content area on the homepage }}
<main id="content" class="content" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}
	{{! Begin MailChimp Signup Form }}
	<section class="subscription">
		<div class="container">
			<p>Книги оновлюються і доповнюються новим матеріалом. Заповніть емейл форму, щоби бути у курсі:</p>
		</div>
		<div id="mc_embed_signup">
			<form id="mc-embedded-subscribe-form" action="//ed-era.us11.list-manage.com/subscribe/post?u=8866dd2b60d24631dfb05130e&amp;id=5dea7e69a7" method="post" name="mc-embedded-subscribe-form" novalidate="" target="_blank" class="validate">
				<div id="mc_embed_signup_scroll">
					<div class="mc-field-group">
						<label for="mce-EMAIL">
							<input id="mce-EMAIL" name="EMAIL" type="email" value="" class="required email"/>
							<button id="mc-embedded-subscribe" name="subscribe" type="submit" class="button">Слідкувати за новинами</button>
						</label>
					</div>
				</div>
			</form>
		<div id="mce-responses" class="row">
			<div id="mce-error-response" style="display:none" class="response"></div>
			<div id="mce-success-response" style="display:none" class="response"></div>
		</div>
		<!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
		<div style="position: absolute; left: -5000px;">
			<input name="b_8866dd2b60d24631dfb05130e_5dea7e69a7" tabindex="-1" type="text" value=""/>
		</div>
		<script src="//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js" type="text/javascript"></script>
		<script>(function($) {window.fnames = new Array(); window.ftypes = new Array();fnames[0]='EMAIL';ftypes[0]='email';fnames[1]='FNAME';ftypes[1]='text';fnames[2]='LNAME';ftypes[2]='text';}(jQuery));var $mcj = jQuery.noConflict(true);</script>
		</div>
	</section>
	{{! End mc_embed_signup }}
</main>
